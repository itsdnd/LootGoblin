<Window x:Class="LootGoblin.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="SplashScreen" 
        WindowStartupLocation="CenterScreen"
        Icon="chest.ico"
        Height="300" 
        Width="300"  
        WindowStyle="None"
        ResizeMode="NoResize"
>
    <Grid>
        <StackPanel>
            <Image Source="Resources/logo.png" Margin="0,8,0,0"/>
            <TextBlock x:Name="txtStatus" Margin="8,16,8,0" Text="Checking Directories..." Height="25" VerticalAlignment="Bottom" TextAlignment="Center"/>
            <ProgressBar x:Name="progressBar" Height="15" Margin="0,8,0,0" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
